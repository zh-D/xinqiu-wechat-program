.container>view {
  width: 80vw;
  margin: 2vh 0;
}

.img-size {
  float: left;
  width: 15vh;
  height: 15vh;
}

.teacher-name {
  float: left;
  display: block;
  width: 30vw;
  height: 30vw;
  margin-left: 10vw;
